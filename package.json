{
    "name": "dex-chan",
    "version": "0.0.6",
    "description": "Discord bot for the MangaDex ES server.",
    "main": "src/index.js",
    "scripts": {
        "start": "node --no-warnings --experimental-vm-modules ./src/index.js",
        "test": "node --no-warnings --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
        "generate-template": "node --no-warnings --experimental-vm-modules ./src/i18n/generate-template.js",
        "prepare": "pnpm generate-template",
        "update": "pnpm up"
    },
    "jest": {
        "transform": {
            "^.+\\.js$": "babel-jest"
        },
        "testMatch": [
            "<rootDir>/tests/**/*.test.js"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "<rootDir>/src/**/*.js"
        ],
        "coverageDirectory": "<rootDir>/coverage",
        "coverageReporters": [
            "lcov",
            "text",
            "json-summary"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        }
    },
    "keywords": [
        "discord",
        "bot",
        "mangadex"
    ],
    "author": "Bartolumiu",
    "license": "GPL-3.0",
    "dependencies": {
        "@discordjs/rest": "^2.5.0",
        "axios": "^1.9.0",
        "chalk": "^5.4.1",
        "discord-api-types": "^0.38.4",
        "discord.js": "^14.19.3",
        "dotenv": "^16.5.0",
        "mongoose": "^8.14.1"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "nock": "^14.0.4"
    }
}
